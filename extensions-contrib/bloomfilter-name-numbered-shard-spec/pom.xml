<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <groupId>org.apache.druid.extensions.contrib</groupId>
    <artifactId>druid-bloomfilter-name-numbered-shard-spec</artifactId>
    <name>druid-bloomfilter-name-numbered-shard-spec</name>
    <description>druid-bloomfilter-name-numbered-shard-spec</description>

    <parent>
        <artifactId>druid</artifactId>
        <groupId>org.apache.druid</groupId>
        <version>dev-0.16.0-incubating</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>
    <properties>
        <guava.version>20.0</guava.version> <!-- need 20.0, Druid is shipped with 16.0.1 -->
        <maven.compiler.plugin.version>3.1</maven.compiler.plugin.version>
        <maven.shade.plugin.version>3.2.1</maven.shade.plugin.version>
    </properties>
    <modelVersion>4.0.0</modelVersion>
    <dependencies>
        <dependency>
            <groupId>org.apache.druid</groupId>
            <artifactId>druid-core</artifactId>
            <version>${project.parent.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.druid</groupId>
            <artifactId>druid-server</artifactId>
            <version>${project.parent.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <version>${guava.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.plugin.version}</version>
                <configuration>
                    <source>${maven.compiler.source}</source>
                    <target>${maven.compiler.target}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>${maven.shade.plugin.version}</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <relocations>
                                <!-- Shade in the guava stuff so it doesn't collide with druid -->
                                <relocation>
                                    <pattern>com.google.guava</pattern>
                                    <shadedPattern>org.apache.druid.timeline.partition.bloomfilter.shaded.com.google.guava</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.common.base</pattern>
                                    <shadedPattern>org.apache.druid.timeline.partition.bloomfilter.shaded.com.google.common.base</shadedPattern>
                                </relocation>
                                <relocation>
                                    <pattern>com.google.common.hash</pattern>
                                    <shadedPattern>org.apache.druid.timeline.partition.bloomfilter.shaded.com.google.common.hash</shadedPattern>
                                </relocation>
                            </relocations>
                            <dependencyReducedPomLocation>${project.build.directory}/dependency-reduced-pom.xml</dependencyReducedPomLocation>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>