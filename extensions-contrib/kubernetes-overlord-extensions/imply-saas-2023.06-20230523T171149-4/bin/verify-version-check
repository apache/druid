PWD="$(pwd)"
WHEREAMI="$(dirname "$0")"
WHEREAMI="$(cd "$WHEREAMI" && pwd)"

if [ -x "$(command -v python3)" ]
then
  exec python3 "$WHEREAMI/verify-version-check-main" "$@"
elif [ -x "$(command -v python2)" ]
then
  exec python2 "$WHEREAMI/verify-version-check-main" "$@"
else
  exec "$WHEREAMI/verify-version-check-main" "$@"
fi
