{
  "type": "index_parallel",
  "spec": {
    "dataSchema": {
      "dataSource": "%%REINDEX_DATASOURCE%%",
      "dimensionsSpec": {
        "dimensionExclusions": [
          "robot",
          "continent"
        ]
      },
      "timestampSpec": {
        "column": "timestamp"
      },
      "metricsSpec": [
        {
          "type": "count",
          "name": "count"
        },
        {
          "type": "doubleSum",
          "name": "added",
          "fieldName": "added"
        },
        {
          "type": "doubleSum",
          "name": "deleted",
          "fieldName": "deleted"
        },
        {
          "type": "doubleSum",
          "name": "delta",
          "fieldName": "delta"
        }
      ],
      "granularitySpec": {
        "segmentGranularity": "DAY",
        "queryGranularity": "second",
        "intervals": [
          "2013-08-31/2013-09-02"
        ]
      }
    },
    "ioConfig": {
      "type": "index_parallel",
      "inputSource": {
        "type": "druid",
        "dataSource": "%%DATASOURCE%%",
        "interval": "2013-08-31/2013-09-02"
      }
    },
    "tuningConfig": {
      "type": "index_parallel",
      "maxNumConcurrentSubTasks": 10,
      "forceGuaranteedRollup": "%%FORCE_GUARANTEED_ROLLUP%%",
      "partitionsSpec": %%PARTITIONS_SPEC%%,
      "splitHintSpec": {
        "type":"segments",
        "maxInputSegmentBytesPerTask": 1
      }
    }
  }
}
