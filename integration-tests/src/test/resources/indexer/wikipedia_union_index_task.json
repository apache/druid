{
  "type": "index_realtime",
  "spec": {
    "dataSchema": {
      "dataSource": "wikipedia_index_test",
      "metricsSpec": [
        {
          "type": "count",
          "name": "count"
        },
        {
          "type": "doubleSum",
          "name": "added",
          "fieldName": "added"
        },
        {
          "type": "doubleSum",
          "name": "deleted",
          "fieldName": "deleted"
        },
        {
          "type": "doubleSum",
          "name": "delta",
          "fieldName": "delta"
        }
      ],
      "granularitySpec": {
        "segmentGranularity": "DAY",
        "queryGranularity": "second"
      },
      "parser": {
        "type": "map",
        "parseSpec": {
          "columns": [
            "timestamp",
            "page",
            "language",
            "user",
            "unpatrolled",
            "newPage",
            "robot",
            "anonymous",
            "namespace",
            "continent",
            "country",
            "region",
            "city",
            "added",
            "deleted",
            "delta"
          ],
          "timestampSpec": {
            "column": "timestamp",
            "format": "iso"
          },
          "dimensionsSpec": {
            "dimensions": [
              "page",
              "language",
              "user",
              "unpatrolled",
              "newPage",
              "robot",
              "anonymous",
              "namespace",
              "continent",
              "country",
              "region",
              "city"
            ]
          }
        }
      }
    },
    "ioConfig": {
      "type": "realtime",
      "firehose": {
        "type": "timed",
        "shutoffTime": "#SHUTOFFTIME",
        "delegate": {
          "type": "receiver",
          "serviceName": "eventReceiverServiceName",
          "bufferSize": 100000
        }
      }
    },
    "tuningConfig": {
      "type": "realtime",
      "maxRowsInMemory": 1,
      "intermediatePersistPeriod": "PT1M",
      "windowPeriod": "PT1M",
      "rejectionPolicy": {
        "type": "none"
      }
    }
  }
}
