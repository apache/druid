{
    "type": "index",
    "spec": {
        "dataSchema": {
            "dataSource": "wikipedia_index_test",
            "metricsSpec": [
                {
                    "type": "count",
                    "name": "count"
                },
                {
                    "type": "doubleSum",
                    "name": "added",
                    "fieldName": "added"
                },
                {
                    "type": "doubleSum",
                    "name": "deleted",
                    "fieldName": "deleted"
                },
                {
                    "type": "doubleSum",
                    "name": "delta",
                    "fieldName": "delta"
                }
            ],
            "granularitySpec": {
                "segmentGranularity": "DAY",
                "queryGranularity": "second",
                "intervals" : [ "2013-08-31/2013-09-01" ]
            },
            "parser": {
                "parseSpec": {
                    "format" : "json",
                    "timestampSpec": {
                        "column": "timestamp"
                    },
                    "dimensionsSpec": {
                        "dimensions": [
                            "page", "language", "user", "unpatrolled", "newPage", "robot", "anonymous",
                            "namespace", "continent", "country", "region", "city"
                        ]
                    }
                }
            }
        },
        "ioConfig": {
            "type": "index",
            "firehose": {
                "type": "local",
                "baseDir": "/resources/indexer",
                "filter": "wikipedia_index_data.json"
            }
        },
        "tuningConfig": {
            "type": "index"
        }
    }
}